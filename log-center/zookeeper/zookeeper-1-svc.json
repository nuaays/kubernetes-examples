{
  "kind": "Service",
  "apiVersion": "v1",
  "metadata": {
    "name": "zookeeper-1",
    "labels": {
      "name": "zookeeper-1"
    }
  },
  "spec": {
    "type": "NodePort",
    "ports": [
      {
        "name": "client",
        "port": 2181,
        "targetPort": 2181,
	"nodePort": 32181
      },
      {
        "name": "followers",
        "port": 2888,
        "targetPort": 2888,
        "nodePort": 32182
      },
      {
        "name": "election",
        "port": 3888,
        "targetPort": 3888,
	"nodePort": 32183
      }
    ],
    "selector": {
      "server-id": "1"
    }
  }
}
