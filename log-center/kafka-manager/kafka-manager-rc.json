{
  "apiVersion": "v1",
  "kind": "ReplicationController",
  "metadata": {
    "labels": {
      "name": "kafka-manager"
    },
    "name": "kafka-manager"
  },
  "spec": {
    "replicas": 1,
    "selector": {
      "name": "kafka-manager"
    },
    "template": {
      "metadata": {
        "labels": {
          "name": "kafka-manager"
        }
      },
      "spec": {
        "containers": [
          {
            "image": "img.reg.3g:15000/kafka-manager:1.2.0",
            "name": "kafka-manager",
            "ports": [
              {
                "containerPort": 9001,
                "name": "kafka-manager",
                "protocol": "TCP"
              },
              {
                "containerPort": 8086,
                "name": "offset",
                "protocol": "TCP"
              }
            ],
	    "resources": {
	      "requests": {
	      	"cpu": 0.5,
		"memory": "1024Mi"
	      },
	      "limits": {
	        "cpu": 2,
		"memory": "4096Mi"
	      }
	    } 
          }
        ],
        "restartPolicy": "Always"
      }
    }
  }
}
